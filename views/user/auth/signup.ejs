<%- include('../../shared/includes/head.ejs', {pageTitle: 'Kayıt Ol'}) %>

<!-- Css -->
<link rel="stylesheet" href="/styles/forms.css" />
<link rel="stylesheet" href="/styles/auth.css" />
</head>

<body>
    <%- include('../../shared/includes/header') %> 

    <main>
        <h1>Yeni Hesap Oluştur</h1>
        <form action="/uye-ol" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
            <p>
                <label for="name">İsim</label>
                <input type="text" name="name" id="name" required>
            </p>
            <p>
                <label for="email">E-mail</label>
                <input type="email" name="email" id="email" required>
            </p>
            <p>
                <label for="confirm-email">Email (Tekrar)</label>
                <input type="email" name="confirm-email" id="confirm-email" required>
            </p>
            <p>
                <label for="password">Şifre</label>
                <input type="password" name="password" id="password" minlength="6" required>
            </p>
            <hr>
            <button class="btn">Hesap Oluştur</button>
            <p id="switch-form">
                <a href="/giris-yap">Bunun yerine giriş yap</a>
            </p>
        </form>
    </main>


<%- include('../../shared/includes/footer') %> 